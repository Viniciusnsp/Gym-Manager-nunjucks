<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{ instructor.avatar_url }}">
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input type="text" name="name" value="{{ instructor.name }}">
    </div>
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <div>
        <input type="date" name="birth" value="{{ instructor.birth }}">
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input type="text" name="email" value="{{ instructor.name }}">
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span><input type="radio" name="gender" value="M" {% if instructor.gender == 'M' %} checked="checked" {% endif %}>Masculino</span>
        <span><input type="radio" name="gender" value="F" {% if instructor.gender == 'F' %} checked="checked" {% endif %}>Feminino</span>
    </div>
</div>

<div class="item">
    <div>Peso</div>
    <div>
        <input type="text" name="peso" value="{{ instructor.name }}">
    </div>
</div>

<div class="item">
    <div>Altura</div>
    <div>
        <input type="text" name="altura" value="{{ instructor.name }}">
    </div>
</div>

<button type="submit">Salvar</button>