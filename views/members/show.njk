{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="avatar">
            <div class="img-centro">
                <img src="{{member.avatar_url}}" alt="Foto do Membro">
            </div>
        </section>

        <section class="details">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Membro</div>
                <div>{{ member.name }}</div>
            </div>

            <div class="item">
                <div>Email</div>
                <div>{{ member.email }}</div>
            </div>

            <div class="item">
                <div>Anivers√°rio</div>
                <div>{{ member.birth }}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{ "Masculino" if member.gender == "M" else "Feminino"}}</div>
            </div>

            <div class="item">
                <div>Peso (kg)</div>
                <div>{{ member.weight}}</div>
            </div>

            <div class="item">
                <div>Altura (cm)</div>
                <div>{{ member.height}}</div>
            </div>

            <a href="/members/{{member.id}}/edit" class="button">Editar</a>

        </section>
    </div>

{% endblock content %}