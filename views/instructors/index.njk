{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <a href="/instructors/create">Novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Instructor</th>
                    <th>Atendimento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for instructor in instructors %}
                    <tr>
                        <td>
                            <img src="{{ instructor.avatar_url }}" alt="Foto do Instrutor">
                            {{ instructor.name }}</td>
                        <td>
                            {{ instructor.services }}
                        </td>

                        <td>
                            <a href="/instructors/{{ instructor.id }}">ver</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>

    </div>

{% endblock content %}