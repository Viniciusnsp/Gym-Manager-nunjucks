{% extends "layout.njk" %}

{% block content %}
    <form class="card" method="POST" action="/instructors?_method=PUT">
        <section class="avatar">
            <div class="img-centro">
                <img src="https://source.unsplash.com/collection/3465564/300x300" alt="Foto do Instrutor">
            </div>
        </section>

        <section class="details">

            <h3>Editar Instrutor</h3>

            {% include 'instructors/fileds.njk' %}

            <input type="hidden" name="id" value="{{instructor.id}}">

        </section>
    </form>

{% endblock content %}